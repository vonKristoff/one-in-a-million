.app-results-component
  transition filter .3s
  position relative
  &.has-blur
    filter blur(.125em)
    .weather-card
      transform scale(.9)
  .content-background
    height 100vh
    transition opacity .3s
    opacity 0.5
    &.is-active
      opacity: 1
  .content-foreground
    position absolute
    top 0
    width 100%
    height 100vh
    display flex
    justify-content center
    align-items center
    .weather-card
      transition transform .3s
      padding 2em 3em
      background rgba(255,255,255,.125)
      border-radius 1em
      border 1px solid rgba(255,255,255,.125)
      [class^="block"]
        text-align: center
        margin 1em 0
        color white
        p
          font-size: 2em
          line-height: initial
      .block--report
        p:last-child
          font-size: 4em
        p.small
          font-size: 1em
